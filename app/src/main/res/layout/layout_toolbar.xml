<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="8dp"
        android:minHeight="?attr/actionBarSize"
        android:paddingTop="30dp"
        android:paddingBottom="24dp"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:subtitle="Find your best ever meal"
        app:subtitleTextAppearance="@style/TextView.PoppinsLightToolbar"
        app:subtitleTextColor="@color/gray"
        app:title="@string/sign_in"
        app:titleTextAppearance="@style/TextView.PoppinsNormalToolbar"
        app:titleTextColor="@color/black" />
</androidx.constraintlayout.widget.ConstraintLayout>